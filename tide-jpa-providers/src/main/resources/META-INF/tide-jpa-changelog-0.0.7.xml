<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.2.xsd">

    <changeSet id="20251112-create-policy-draft" author="tidecloak">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="POLICY"/>
            </not>
        </preConditions>

        <createTable tableName="POLICY">
            <column name="ID" type="VARCHAR(36)">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_POLICY"/>
            </column>

            <column name="CHANGESET_REQUEST_ID" type="VARCHAR(36)">
                <constraints nullable="true"/>
            </column>

            <column name="POLICY" type="TEXT">
                <constraints nullable="true"/>
            </column>

            <column name="TIMESTAMP" type="BIGINT">
                <constraints nullable="true"/>
            </column>
        </createTable>
        <addColumn tableName="CHANGESET_REQUEST">
            <column name="REQUEST_MODEL" type="TEXT"><constraints nullable="true"/></column>
        </addColumn>

        <rollback>
            <dropTable tableName="POLICY"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
