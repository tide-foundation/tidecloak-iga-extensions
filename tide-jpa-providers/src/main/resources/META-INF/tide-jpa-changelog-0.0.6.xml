<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.2.xsd">
    <changeSet id="02102025-test" author="tidecloak">
        <createTable tableName="LICENSING_DRAFT">
            <column name="ID" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="CHANGE_REQUEST_ID" type="VARCHAR(36)">
                <constraints nullable="true"/>
            </column>
            <column name="REALM_ID" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="DRAFT_STATUS" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="SIGNATURE" type="VARCHAR(36)">
                <constraints nullable="true"/>
            </column>
            <column name="ACTION_TYPE" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="TIMESTAMP" type="BIGINT"/>
        </createTable>
    </changeSet>
    <changeSet id="20251007-add-gvrk-certificate-to-license-history" author="tidecloak">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="LICENSE_HISTORY" columnName="GVRK_CERTIFICATE"/>
            </not>
        </preConditions>

        <addColumn tableName="LICENSE_HISTORY">
            <column name="GVRK_CERTIFICATE" type="TEXT">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <rollback>
            <dropColumn tableName="LICENSE_HISTORY" columnName="GVRK_CERTIFICATE"/>
        </rollback>
    </changeSet>

</databaseChangeLog>